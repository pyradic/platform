{% for asset in asset_inlines_context('styles.css') %}
    <!-- {{ asset.relativeSourceFilePath }} -->
    {% if assetOutput == 'content' %}
        <style type="text/css">
        {{ asset.content|raw }}
        </style>
    {% elseif assetOutput == 'url' %}
        <link type="text/css" href="{{ asset.url }}"/>
    {% else %}
        <style type="text/css">
        {{ asset.content|raw }}
        </style>
    {% endif %}
{% endfor %}


